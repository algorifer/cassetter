{
  "name": "cassetter",
  "version": "0.1.0",
  "description": "UPD granular sampler",
  "main": "main.js",
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "concurrently \"run-p start:dev autobuild\" \"electron .\"",
    "start": "sirv public",
    "start:dev": "sirv public --dev",
    "package-mac": "npm run build && electron-builder build --mac --publish never",
    "package-win": "npm run build && electron-builder build --win --publish never",
    "package-linux": "npm run build && electron-builder build --linux --publish never"
  },
  "author": "person0b",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.0.1",
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.27.9",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "sirv-cli": "^0.4.5",
    "svelte": "^3.16.1",
    "ws": "^7.4.6"
  },
  "dependencies": {
    "tone": "^13.8.25"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "cassetter",
    "copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!src",
      "!data"
    ],
    "mac": {
      "icon": "public/icon.icns"
    },
    "win": {
      "icon": "public/icon.ico",
      "target": "portable"
    },
    "directories": {
      "output": "dist"
    },
    "linux": {
      "icon": "public/icon.png"
    }
  }
}
